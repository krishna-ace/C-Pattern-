#include <stdio.h>

void printStars(int count) {
    if (count == 0)
        return;

    printf("*");
    printStars(count - 1);
}

void printTriangle(int rows) {
    if (rows == 0)
        return;

    printTriangle(rows - 1);
    printStars(rows);
    printf("\n");
}

int main() {
    int n = 4;
    printTriangle(n);
    return 0;
}
