#include <stdio.h>
int main() {
    int n = 5;
    int i = n;
    while (i >= 1) {
        int space = 1;
        while (space <= n - i) {
            printf(" ");
            space++;
        }
        int star = 1;
        while (star <= (2 * i - 1)) {
            printf("*");
            star++;
        }
        printf("\n");
        i--;
    }
    return 0;
}
